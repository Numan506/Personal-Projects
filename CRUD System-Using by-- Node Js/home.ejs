<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <div class="container mt-3">

        <!-- When we use (.hbs) file -->

        <!-- {{#if title}}

        <h2>{{title}}</h2>
        {{/if}} -->

        <h2 style="color: blueviolet; text-align: center; background-color: violet;"><%- title %></h2>
        </br>
       <a href="/save" class="btn btn-danger">Add Details</a> </br> </br>
        <table class="table table-dark table-striped">
            <thead>
                <tr style="color: darkkhaki;">
                    <th>Name</th>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Edit / Delete</th>
                    
                </tr>
            </thead>

            <tbody>

                <% user.forEach((user)=>{ %>
                    <tr>
                         <td><%- user.Name %></td>
                         <td><%- user.Id %></td>
                         <td><%- user.Email %></td>
                         <td><%- user.Phone %></td>
                         <td> 
                             <a href="edit/<%- user.Id %>" class="btn btn-sm btn-primary">Edit</a>
                             <a href="delete/<%- user.Id %>"class="btn btn-sm btn-danger">Delete</a>
                             
                        </td>

                    </tr>
                    
                   

                <% });%>
                
               

            </tbody>
        </table>
    </div>





    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>